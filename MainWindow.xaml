<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Background="BlanchedAlmond">
        <Label Foreground="Blue" FontSize="20" Height="40">Enter the list of Integers with spaces</Label>
        <TextBox TextWrapping="Wrap" Height="50" FontSize="30" Name="input1"></TextBox>
      
        <Label Foreground="Blue" Height="50" FontSize="20">Enter the Type of Operation to be Performed </Label>
        <Button Background="LightPink" Margin="10,10" HorizontalAlignment="Left" Width="200"  Height="30" FontSize="18" Click="Button_Click"   >Numbers >50</Button>
        <Button Background="LightPink" Margin="10,10" HorizontalAlignment="Left" Width="200"  Height="30" FontSize="18" Click="Button_Click_1"> Sort Numbers in ASC</Button>
        <Button Background="LightPink"  Margin="10,10" HorizontalAlignment="Left" Width="200"  Height="30" FontSize="18" Click="Button_Click_2"> Square of Numbers</Button>
        <TextBox FontSize="20" TextWrapping="Wrap" Height="50" Name="Output"></TextBox>
        
    </StackPanel>
</Window>
